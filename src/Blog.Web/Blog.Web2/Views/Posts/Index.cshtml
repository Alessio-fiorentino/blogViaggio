@model IEnumerable<Blog.Web2.Models.Post>

@{
    ViewData["Title"] = "Index";
}

<h1>Cerca una esperienza di viaggio</h1>
<form asp-controller="Posts" asp-action="Index" method="get">
    <p>
        Città: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                Città
            </th>
            <th>
               Data
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titolo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Periodo)
            </td>
            
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
             
            </td>
        </tr>
}
    </tbody>
</table>
